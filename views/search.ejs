<%= include partials/header %>


<div class="container-fluid">

	<div class="row">
		<div class="col-md-3 col-centered"><img src="http://i.imgur.com/50fb4RS.png"/></div>
	</div>	
	<div class="row">
		<div class="col-md-2 col-md-offset-5">			
			<% if(user) { %>
			<h2><strong><b><%= typeof user.name === "string" ? user.name : "Unknown" %></b>, select the country.</strong></h2>
			<% } %>
		</div>
	</div>	
		
	<div class="container searchBackground">	
		<% for (var i = 0; i < countryArray.length; i++) { %>
		<div class="row">
			<div class="col-md-6 col-md-offset-3">			
				<h2><a href="/show/<%= countryArray[i].name %>">
					<%= countryArray[i].name %>
				</a></h2>
			</div>
			<% } %>
		</div>
	</div>	

</div>		


</body>
</html>